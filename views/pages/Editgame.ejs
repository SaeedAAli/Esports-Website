<%- include('../partials/head') %>

<div class="container px-5 my-5">
    <h1>Edit  a game</h1>
    <form action="http://localhost:3000/games/edit/<%=game.game_id%>" method="post">
        <p>Game name: <input class="form-control"  name="name" type="text" /></p>
        <p>Match duration: <input class="form-control"  name="duration" type="text" /></p>    
        <p>Team size:<input  class="form-control" value="" name="team_size" type="text" /></p>
        <button class="btn btn-primary btn-lg" id="submitButton" type="submit">Edit game</button>
    </form>
</div>
